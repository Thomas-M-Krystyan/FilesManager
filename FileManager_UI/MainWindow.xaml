<Window x:Class="FileManager_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Grid>
        <!-- ################################# -->
        <!-- ###  LEFT PART OF THE SCREEN  ### -->
        <!-- ################################# -->

        <!-- List of loaded files -->
        <ListBox x:Name="filesList"
                 Height="400"
                 Width="600"
                 Margin="10,0,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 AllowDrop="True"
                 Drop="Drop_Files" />

        <!-- ################################## -->
        <!-- ###  RIGHT PART OF THE SCREEN  ### -->
        <!-- ################################## -->

        <!-- Group label -->
        <Label Content="Rename files"
               FontWeight="Bold"
               Margin="625,10,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top" />

        <!-- Renaming files (incremented number) -->
        <Label Content="Start number:"
               Margin="625,41,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               ToolTip="Rename given files using incremented start number" />

        <TextBox x:Name="startingNumber"
                 Width="30"
                 Margin="712,45,0,0"
                 TextWrapping="Wrap"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top" />
        
        <!-- Global buttons -->
        <Button x:Name="clearButton"
                Content="Clear"
                Width="50"
                Margin="0,0,65,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="ClearButton_Click" />

        <Button x:Name="processButton"
                Content="Process"
                Width="50"
                Margin="0,0,10,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="ProcessButton_Click" />
    </Grid>
</Window>
