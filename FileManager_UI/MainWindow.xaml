<Window x:Class="FileManager_UI.MainWindow"
        Title="MainWindow"
        Height="450"
        Width="810"
        ResizeMode="NoResize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d">
    <Grid>
        <!-- ################################# -->
        <!-- ###  LEFT PART OF THE SCREEN  ### -->
        <!-- ################################# -->

        <!-- List of loaded files -->
        <ListBox x:Name="FilesList"
                 Height="400"
                 Width="590"
                 Margin="10,0,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 AllowDrop="True"
                 Drop="Drop_Files" />

        <!-- ################################## -->
        <!-- ###  RIGHT PART OF THE SCREEN  ### -->
        <!-- ################################## -->

        <!-- Group label -->
        <Label Content="RENAME FILES"
               FontWeight="Bold"
               Margin="625,10,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top" />

        <!-- Renaming files (incremented number) -->
        <Border Height="25"
                Width="180"
                Margin="610,39,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="15px"/>
                    <ColumnDefinition Width="85px"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <RadioButton x:Name="StartNumberRadioButton"
                             Grid.Column="0"
                             Content=""
                             Height="14"
                             Width="15"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Center" />

                <Label Content="Start number:"
                       Grid.Column="1"
                       Height="25"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       ToolTip="Rename given files using incremented start number" />

                <TextBox x:Name="StartingNumber"
                         Grid.Column="2"
                         Height="20"
                         Width="35"
                         VerticalContentAlignment="Center"
                         TextWrapping="Wrap"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center" />

                <Button x:Name="ResetStartInputButton"
                        Grid.Column="3"
                        Content="Reset"
                        FontSize="11"
                        Height="20"
                        Width="35"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Click="ResetStartInput_Click" />
            </Grid>
        </Border>

        <!-- Global buttons -->
        <Button x:Name="ClearListButton"
                Content="Clear"
                Width="50"
                Margin="0,0,65,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="ClearButton_Click" />

        <Button x:Name="ProcessButton"
                Content="Process"
                Width="50"
                Margin="0,0,10,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="ProcessButton_Click" />
    </Grid>
</Window>
